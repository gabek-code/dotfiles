# starting programs assignment 
assign [class="Firefox"] $ws2 
assign [class="Spotify"] $ws10

#starting programs
exec firefox
exec spotify

# move spotify because assignemnt is broken
for_window [class="Spotify"] move to workspace $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# default gap size
gaps inner 15
gaps outer 15 

bindsym $mod+i          gaps inner current plus 5
bindsym $mod+Shift+i    gaps inner current minus 5

bindsym $mod+o          gaps outer current plus 5
bindsym $mod+Shift+o    gaps outer current minus 5

bindsym $mod+p gaps inner current set 15; gaps outer current set 15
bindsym $mod+Shift+p gaps inner current set 0; gaps outer current set 0

# define resize values
set $rw 5
set $rh 5

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width $rw px or $rw ppt
        bindsym k resize grow height $rh px or $rh ppt
        bindsym j resize shrink height $rh px or $rh ppt
        bindsym l resize grow width $rw px or $rw ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width $rw px or $rw ppt
        bindsym Down resize grow height $rh px or $rh ppt
        bindsym Up resize shrink height $rh px or $rh ppt
        bindsym Right resize grow width $rw px or $rw ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

